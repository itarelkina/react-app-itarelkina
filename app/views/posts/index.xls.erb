<?xml version="1.0"?>
<Workbook xmlns="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:o="urn:schemas-microsoft-com:office:office"
  xmlns:x="urn:schemas-microsoft-com:office:excel"
  xmlns:ss="urn:schemas-microsoft-com:office:spreadsheet"
  xmlns:html="http://www.w3.org/TR/REC-html40">
  <Worksheet ss:Name="Sheet1">
    <Table>
      <Row>
        <Cell><Data ss:Type="String">ID</Data></Cell>
        <Cell><Data ss:Type="String">letter_id</Data></Cell>
        <Cell><Data ss:Type="String">name</Data></Cell>
        <Cell><Data ss:Type="String">unit_price</Data></Cell>
        <Cell><Data ss:Type="String">quantity</Data></Cell>

      </Row>
    <% @posts.each do |post| %>
      <Row>
        <Cell><Data ss:Type="Number"><%= post.id %></Data></Cell>
        <Cell><Data ss:Type="Number"><%= post.letter_id %></Data></Cell>
        <Cell><Data ss:Type="String"><%= post.name %></Data></Cell>
        <Cell><Data ss:Type="Number"><%= post.unit_price %></Data></Cell>
        <Cell><Data ss:Type="Number"><%= post.quantity %></Data></Cell>
      </Row>
    <% end %>
    </Table>
  </Worksheet>
</Workbook>
